<dynamic_object>
	<diesel orientation_object="rp_minecraft_shield" materials="units/pd2_mod_craft/characters/minecraft_shield/minecraft_shield"/>

	<sequence_manager file="units/pd2_mod_craft/characters/minecraft_shield/minecraft_shield"/>

	<bodies>
		<body name="held_body" enabled="true" template="animated" collision_class="ragdoll" pushed_by_mover="false" remove_ray_type="ai_vision walk">
			<object name="rp_minecraft_shield"/>
			<object name="c_box" collision_type="box" padding="-2"/>
		</body>

		<body name="dropped_body" enabled="false" template="debris" collision_class="ragdoll" pushed_by_mover="false" remove_ray_type="ai_vision walk">
			<object name="rp_minecraft_shield"/>
			<object name="c_box" collision_type="box"/>
		</body>
	</bodies>

	<decal_surfaces>
		<decal_mesh name="dm_metal" enabled="true" material="shield"/>
	</decal_surfaces>

	<graphics>
		<object name="g_shield" enabled="true"/>
	</graphics>
</dynamic_object>
